{
  "schemaVersion": "2.2",
  "description": "Run script on instance",
  "mainSteps": [
    {
      "action": "aws:runShellScript",
      "name": "runShellScript",
      "inputs": {
        "runCommand": [
          "echo 'Hello, world!' > /home/ubuntu/hello.txt",
          "python3 /home/ubuntu/main.py"
        ]
      }
    }
  ]
}
